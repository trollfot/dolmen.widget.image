<div id="" class="" i18n:domain="dolmen.widget.file"
     tal:attributes="id view/id; class view/klass;"
     tal:define="value view/value; exists python:value is not None">

  <img src="" title="" tal:condition="exists"
       tal:attributes="src view/preview_url; title view/filename" />

  <span tal:define="fieldname view/field/__name__ | nothing;
		    filename view/filename;"
	tal:condition="python: exists and fieldname">
    <a tal:content="filename"
       tal:attributes="href view/download_url">Filename</a> &mdash;
    <span tal:condition="view/file_size"
	  tal:content="view/file_size/sizeForDisplay" />
  </span>
  
  <span tal:condition="not:exists" class="discreet" i18n:translate="no_file">
    No file
  </span>
</div>
